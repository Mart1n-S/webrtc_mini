<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title>Whiteboard + Call</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- GridStack (LOCAL) -->
  <link rel="stylesheet" href="/libs/gridstack/gridstack.min.css">
  <script src="/libs/gridstack/gridstack-all.js"></script>

  <!-- Styles du whiteboard -->
  <link rel="stylesheet" href="/whiteboard/whiteboard.css">
</head>
<body>
  <div class="main">
    <!-- Colonne gauche : whiteboard -->
    <div class="wb-col">
      <div class="wb-toolbar">
        <button class="btn is-active" data-tool="select">🖱️ Sélection</button>
        <button class="btn" data-tool="note">🗒️ Post-it</button>
        <div class="spacer"></div>
        <button class="btn btn--primary" id="btnShare">Partager le lien</button>
        <button class="btn" id="btnClear">Vider</button>
      </div>

      <div id="board" class="wb-canvas">
        <div class="grid-stack" aria-label="Whiteboard"></div>
      </div>
    </div>
  <!-- JS du whiteboard (modules ES) -->
  <script type="module" src="/whiteboard/whiteboard.js"></script>
</body>
</html>
